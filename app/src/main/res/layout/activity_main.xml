<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/menu"
                android:layout_weight="0"
                android:layout_margin="15dp">

            </ImageView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raoof"
                android:shadowColor="#000"
                android:layout_weight="1"
                android:text="من القاهرة..هنا دمشق"
                android:textColor="#64aae3"
                android:layout_marginRight="10dp"
                android:textSize="28sp" />



        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/gss_light"
                    android:text="أسعار العملات"
                    android:onClick="btn_money1"
                    android:textColor="#929294"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gss_light"
                    android:gravity="center"
                    android:text="اّراء حرة"
                    android:onClick="btn_notes1"
                    android:textColor="#929294"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gss_light"
                    android:text="ّاّخر الأخبار"
                    android:onClick="btn_news1"
                    android:textColor="#929294"
                    android:textColorHighlight="#1bace5"
                    android:gravity="center"
                    android:textSize="16sp" />

            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <fragment
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.yehiakh96.fragment.fragment_news">
        </fragment>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingTop="8dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:src="@drawable/user" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:src="@drawable/menu"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:src="@drawable/gps" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:src="@drawable/ads" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:src="@drawable/news" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/textuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="الحساب"
                android:gravity="center"
                android:fontFamily="@font/gss_light"
                android:textColor="#929294"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="الأقسام"
                android:fontFamily="@font/gss_light"
                android:gravity="center"
                android:textColor="#929294"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textdalel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="الدليل"
                android:gravity="center"
                android:fontFamily="@font/gss_light"
                android:textColor="#929294"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="الأعلانات"
                android:gravity="center"
                android:fontFamily="@font/gss_light"
                android:textColor="#929294"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textnews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="الأخبار"
                android:gravity="center"
                android:fontFamily="@font/gss_light"
                android:textColor="#929294"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>